<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddWord">

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:padding="10dp"
            android:id="@+id/englishWord"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Write non-Arabic word"
            android:background="@android:color/transparent"
            android:layout_height="100dp" />
        <EditText
            android:id="@+id/arabicWord"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Write all Arabic words separated by _Symbol"
            android:padding="10dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            />

    </LinearLayout>
    
    <Button
        android:id="@+id/submitAdd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add translate"
        android:textAllCaps="false"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="40dp"
        />

</LinearLayout>